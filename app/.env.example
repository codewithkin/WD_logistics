# Database (Prisma Postgres / Accelerate URL)
# For local development, run `bunx prisma dev` to start a local Prisma Postgres server
# Or use a remote PostgreSQL database URL
DATABASE_URL="prisma+postgres://localhost:51213/?api_key=your-api-key"

# Better Auth
BETTER_AUTH_SECRET="your-secret-key-here-min-32-characters-long"
BETTER_AUTH_URL="http://localhost:3000"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# AI Agent Integration
AGENT_URL="http://localhost:3001"
# Shared API Key for authentication (MUST match the agent's AGENT_API_KEY)
# Generate a strong random key: openssl rand -hex 32
AGENT_API_KEY="your-shared-agent-api-key-change-this-to-random-string"

# Google Maps API (for trip route selection)
# Get your API key from https://console.cloud.google.com/google/maps-apis
# Required APIs: Maps JavaScript API, Places API, Directions API, Geocoding API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# AWS S3 (for image uploads)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_S3_BUCKET_NAME="your-s3-bucket-name"

# SMTP (for nodemailer sendEmail helper)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM_EMAIL="your-email@gmail.com"
SMTP_FROM_NAME="WD Logistics"
