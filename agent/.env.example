# Environment variables for the AI Agent

# Server
PORT=3001

# Web App API Configuration
# The agent communicates with the web app via API endpoints instead of direct database access
WEB_APP_URL="http://localhost:3000"

# Shared API Key for authentication (MUST match the web app's AGENT_API_KEY)
# Generate a strong random key: openssl rand -hex 32
AGENT_API_KEY="your-shared-agent-api-key-change-this-to-random-string"

# OpenAI API Key (for Mastra.ai)
OPENAI_API_KEY="your-openai-api-key"

# Mastra.ai Configuration
MASTRA_LOG_LEVEL="info"

# WhatsApp Configuration
# Set to "true" or "1" to disable responses to non-admin phone numbers
# When enabled, only admin numbers can interact with the bot
# When disabled (default), non-admins can ask business info questions
NO_ADMIN_ANSWER="false"